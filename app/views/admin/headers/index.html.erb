<table cellspacing="0">
	<thead>
		<tr>
			<th width="80%">Title</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% collection.each do |item| %>
		<tr>
			<td>
				<%= item.title %>
			</td>
			<td>
				<%= link_to 'Edit', edit_resource_url(item) %>&nbsp;
				<%= link_to 'Delete', resource_url(item), :method => :delete, :confirm => 'Are you sure?' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
