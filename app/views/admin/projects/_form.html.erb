<%= tabs_for do |tab| %>
	<% tab.create('details','Details') do %>
		<%= f.input :title %>
		<%= f.input :tag_list, :input_html => { :class => 'tag-select' } %>
		<%= f.cktext_area :about, :height => '300px' %>
	<% end %>
	<% tab.create('attachments', 'Attachments') do %>
		<%= f.association :assets, :as => :check_boxes %>
	<% end %>
<% end %>
<%= f.button :submit %>