<!DOCTYPE html>
<html>
<head>
  <title>Portfolio</title>
  <%= stylesheet_link_tag 'screen' %>
	<%= google_maps_javascript(3) %>
	<script type="text/javascript">
		var mapLatlng = new google.maps.LatLng(<%= @hero_image.lat_lng %>);
		var mapMarkerTitle = "<%= @hero_image.title %>"
	</script>
  <%= javascript_include_tag 'jquery/jquery.min', 'jquery/jquery.fancybox', 'rails', 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="wrapper">
		<header>
			<h1><%= link_to(raw('Adam<br />Carlile'), root_path)%></h1>
			<p class="strap">Hello, I'm Adam Carlile, I'm a web designer and developer, currently living in Whistler, BC, Canada</p>
		</header>
		<section id="hero">
			<%= image_tag @hero_image.picture.url(:hero) %>
			<div class="caption">
				<h2><%= @hero_image.title %></h2>
				<%= simple_format @hero_image.strapline %>
			</div>
			<ul class="tools">
				<li class="zoom lightbox"><%= link_to "Zoom", @hero_image.picture.url(:large) %></li>
				<li class="map">
					<a href="#">Location</a>
					<div id="map_canvas">
						
					</div>
				</li>
			</ul>
		</section>
	</div>
	<%= yield :javascript %>
</body>
</html>
